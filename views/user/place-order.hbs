<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form validation
        const form = document.getElementById('checkout-form');
        const inputs = form.querySelectorAll('input[required], textarea[required]');
        
        // Real-time validation
        inputs.forEach(input => {
            input.addEventListener('blur', validateField);
            input.addEventListener('input', clearError);
        });
        
        // PIN code validation
        const pincodeInput = document.getElementById('pincode');
        pincodeInput.addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '').slice(0, 6);
        });
        
        // Mobile number validation
        const mobileInput = document.getElementById('mobile');
        mobileInput.addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '').slice(0, 10);
        });
    });

    function validateField(e) {
        const field = e.target;
        const value = field.value.trim();
        
        clearError(e);
        
        if (!value && field.required) {
            showFieldError(field, 'This field is required');
            return false;
        }
        
        if (field.id === 'pincode' && value.length !== 6) {
            showFieldError(field, 'Please enter a valid 6-digit PIN code');
            return false;
        }
        
        if (field.id === 'mobile' && value.length !== 10) {
            showFieldError(field, 'Please enter a valid 10-digit mobile number');
            return false;
        }
        
        return true;
    }
    
    function clearError(e) {
        const field = e.target;
        field.classList.remove('error');
        const errorElement = field.parentElement.querySelector('.field-error');
        if (errorElement) {
            errorElement.remove();
        }
    }
    
    function showFieldError(field, message) {
        field.classList.add('error');
        const errorElement = document.createElement('div');
        errorElement.className = 'field-error';
        errorElement.textContent = message;
        errorElement.style.color = '#e53e3e';
        errorElement.style.fontSize = '0.875rem';
        errorElement.style.marginTop = '5px';
        field.parentElement.appendChild(errorElement);
    }

    $("#checkout-form").submit((e) => {
        e.preventDefault();
        
        // Validate all fields
        const form = document.getElementById('checkout-form');
        const inputs = form.querySelectorAll('input[required], textarea[required]');
        let isValid = true;
        
        inputs.forEach(input => {
            if (!validateField({ target: input })) {
                isValid = false;
            }
        });
        
        if (!isValid) {
            showNotification('Please fill in all required fields correctly', 'error');
            return;
        }
        
        // Show loading state
        const btn = document.getElementById('place-order-btn');
        const form_container = document.querySelector('.checkout-container');
        btn.classList.add('loading');
        form_container.classList.add('loading');
        
        $.ajax({
            url: '/place-order',
            method: 'post',
            data: $('#checkout-form').serialize(),
            success: (response) => {
                if (response.codSuccess) {
                    showNotification('Order placed successfully!', 'success');
                    setTimeout(() => {
                        location.href = '/order-success';
                    }, 1500);
                } else {
                    btn.classList.remove('loading');
                    form_container.classList.remove('loading');
                    razorpayPayment(response);
                }
            },
            error: () => {
                btn.classList.remove('loading');
                form_container.classList.remove('loading');
                showNotification('Failed to place order. Please try again.', 'error');
            }
        });
    });
    
    function razorpayPayment(order) {
        var options = {
            "key": "rzp_test_4z1dCRspybjEPz",
            "amount": order.amount,
            "currency": "INR",
            "name": "Amaze Cart",
            "description": "Secure Online Payment",
            "image": "/images/logo.png",
            "order_id": order.id,
            "handler": function (response) {
                verifyPayment(response, order);
            },
            "prefill": {
                "name": document.getElementById('mobile').value || "Customer",
                "email": "",
                "contact": document.getElementById('mobile').value || "9000000000"
            },
            "notes": {
                "address": document.getElementById('address').value
            },
            "theme": {
                "color": "#4299e1"
            },
            "modal": {
                "ondismiss": function() {
                    const btn = document.getElementById('place-order-btn');
                    const form_container = document.querySelector('.checkout-container');
                    btn.classList.remove('loading');
                    form_container.classList.remove('loading');
                    showNotification('Payment cancelled', 'info');
                }
            }
        };

        var rzp1 = new Razorpay(options);
        rzp1.open();
    }
    
    function verifyPayment(payment, order) {
        $.ajax({
            url: '/verify-payment',
            data: {
                payment: {
                    razorpay_order_id: payment.razorpay_order_id,
                    razorpay_payment_id: payment.razorpay_payment_id,
                    razorpay_signature: payment.razorpay_signature
                },
                order: {
                    id: order.id,
                    receipt: order.receipt
                }
            },
            method: 'post',
            success: (response) => {
                if (response.status) {
                    showNotification('Payment successful!', 'success');
                    setTimeout(() => {
                        location.href = '/order-success';
                    }, 1500);
                } else {
                    showNotification(response.errMsg || 'Payment verification failed', 'error');
                    const btn = document.getElementById('place-order-btn');
                    const form_container = document.querySelector('.checkout-container');
                    btn.classList.remove('loading');
                    form_container.classList.remove('loading');
                }
            },
            error: (xhr, status, error) => {
                console.error('Verify payment error:', error);
                showNotification('Payment verification failed', 'error');
                const btn = document.getElementById('place-order-btn');
                const form_container = document.querySelector('.checkout-container');
                btn.classList.remove('loading');
                form_container.classList.remove('loading');
            }
        });
    }
    
    function showNotification(message, type) {
        // Create notification element
        const notification = document.createElement('div');
        notification.className = `checkout-notification ${type}`;
        
        const iconClass = type === 'success' ? 'fa-check-circle' : 
                         type === 'error' ? 'fa-exclamation-circle' : 'fa-info-circle';
        
        notification.innerHTML = `
            <i class="fas ${iconClass}"></i>
            <span>${message}</span>
        `;
        
        // Add styles
        const bgColor = type === 'success' ? '#48bb78' : 
                       type === 'error' ? '#f56565' : '#4299e1';
        
        notification.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            background: ${bgColor};
            color: white;
            padding: 15px 20px;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            z-index: 10000;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
            transform: translateX(100%);
            transition: transform 0.3s ease;
            max-width: 350px;
        `;
        
        document.body.appendChild(notification);
        
        // Animate in
        setTimeout(() => {
            notification.style.transform = 'translateX(0)';
        }, 100);
        
        // Remove after delay
        const delay = type === 'success' ? 4000 : 5000;
        setTimeout(() => {
            notification.style.transform = 'translateX(100%)';
            setTimeout(() => {
                if (document.body.contains(notification)) {
                    document.body.removeChild(notification);
                }
            }, 300);
        }, delay);
    }
    
    // Add error styles
    const style = document.createElement('style');
    style.textContent = `
        .modern-input.error {
            border-color: #e53e3e;
            background-color: #fed7d7;
        }
        
        .modern-input.error:focus {
            border-color: #e53e3e;
            box-shadow: 0 0 0 3px rgba(229, 62, 62, 0.1);
        }
    `;
    document.head.appendChild(style);
</script>
