<div class="order-products-container">
    <div class="container">
        <!-- Header -->
        <div class="products-header">
            <div class="header-content">
                <h1 class="page-title">
                    <i class="fas fa-box-open"></i>
                    Order Details
                </h1>
                <p class="page-subtitle">View products in this order</p>
            </div>
            <div class="header-actions">
                <a href="/orders" class="btn-back">
                    <i class="fas fa-arrow-left"></i>
                    Back to Orders
                </a>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="products-grid">
            {{#each products}}
            <div class="product-card">
                <div class="product-image-wrapper">
                    <img src="/product-images/{{this.product._id}}.jpg"
                         alt="{{this.product.Name}}"
                         onerror="this.src='https://placehold.co/400x300/667eea/white?text={{this.product.Name}}'">
                    <div class="quantity-badge">
                        <i class="fas fa-shopping-bag"></i>
                        Qty: {{this.quantity}}
                    </div>
                </div>
                <div class="product-details">
                    <h3 class="product-name">{{this.product.Name}}</h3>
                    <p class="product-category">
                        <i class="fas fa-tag"></i>
                        {{this.product.Category}}
                    </p>
                    <p class="product-description">{{truncate this.product.Description 100}}</p>
                    <div class="product-footer">
                        <div class="price-section">
                            <span class="price-label">Price:</span>
                            <span class="product-price">₹{{this.product.Price}}</span>
                        </div>
                        <div class="total-section">
                            <span class="total-label">Total:</span>
                            <span class="product-total">₹{{multiply this.product.Price this.quantity}}</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

