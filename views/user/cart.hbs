<div class="cart-container">
    <div class="container">
        <div class="cart-header">
            <h1 class="cart-title">
                <i class="fas fa-shopping-cart"></i>
                Shopping Cart
            </h1>
            <div class="breadcrumb-nav">
                <a href="/">Home</a> / <span>Cart</span>
            </div>
        </div>

        {{#if products.length}}
        <div class="cart-content">
            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="cart-items">
                        {{#each products}}
                        <div class="cart-item" id="cart-item-{{this.product._id}}">
                            <div class="item-image">
                                <img src="/product-images/{{this.product._id}}.jpg" 
                                     alt="{{this.product.Name}}" 
                                     onerror="this.src='https://placehold.co/600x400/png'">
                            </div>
                            
                            <div class="item-details">
                                <h4 class="item-name">{{this.product.Name}}</h4>
                                <p class="item-description">{{truncate this.product.Description 80}}</p>
                                <div class="item-category">
                                    <span class="category-badge">{{this.product.Category}}</span>
                                </div>
                            </div>
                            
                            <div class="item-price">
                                <div class="price-display">₹{{this.product.Price}}</div>
                                <div class="price-total" id="item-total-{{this.product._id}}">
                                    ₹{{multiply this.product.Price this.quantity}}
                                </div>
                            </div>
                            
                            <div class="item-quantity">
                                <div class="quantity-controls">
                                    <button class="quantity-btn decrease"
                                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <span class="quantity-display" id="{{this.product._id}}">{{this.quantity}}</span>
                                    <button class="quantity-btn increase"
                                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            
                            <div class="item-actions">
                                <button class="remove-btn" 
                                        onclick="removeItem('{{this.product._id}}', '{{this.product.Name}}')">
                                    <i class="fas fa-trash-alt"></i>
                                    Remove
                                </button>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    
                    <!-- Continue Shopping Button -->
                    <div class="continue-shopping">
                        <a href="/" class="btn-secondary">
                            <i class="fas fa-arrow-left"></i>
                            Continue Shopping
                        </a>
                    </div>
                </div>

                <!-- Cart Summary -->
                <div class="col-lg-4">
                    <div class="cart-summary">
                        <div class="summary-header">
                            <h3>Order Summary</h3>
                        </div>
                        
                        <div class="summary-content">
                            <div class="summary-row">
                                <span>Subtotal ({{products.length}} items)</span>
                                <span id="subtotal">₹{{totalValue}}</span>
                            </div>
                            
                            <div class="summary-row">
                                <span>Shipping</span>
                                <span class="free-shipping">Free</span>
                            </div>
                            
                            <div class="summary-row">
                                <span>Tax</span>
                                <span>₹0</span>
                            </div>
                            
                            <hr class="summary-divider">
                            
                            <div class="summary-total">
                                <span>Total</span>
                                <span class="total-amount" id="total">₹{{totalValue}}</span>
                            </div>
                            
                            <div class="checkout-actions">
                                <a href="/place-order" class="btn-primary checkout-btn">
                                    <i class="fas fa-credit-card"></i>
                                    Proceed to Checkout
                                </a>
                                
                                <div class="secure-checkout">
                                    <i class="fas fa-lock"></i>
                                    <span>Secure Checkout</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Promo Code -->
                    <div class="promo-code">
                        <h4>Have a promo code?</h4>
                        <div class="promo-input">
                            <input type="text" placeholder="Enter code" id="promo-code">
                            <button class="apply-promo">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {{else}}
        <!-- Empty Cart State -->
        <div class="empty-cart-state">
            <div class="empty-cart-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <h2>Your Cart is Empty</h2>
            <p>Looks like you haven't added anything to your cart yet.</p>
            <p>Start shopping to fill it up!</p>
            <a href="/" class="btn-primary start-shopping">
                <i class="fas fa-shopping-bag"></i>
                Start Shopping
            </a>
            
            <!-- Suggested Categories -->
            <div class="suggested-categories">
                <h4>Popular Categories</h4>
                <div class="category-links">
                    <a href="/?category=Electronics" class="category-link">Electronics</a>
                    <a href="/?category=Clothing" class="category-link">Clothing</a>
                    <a href="/?category=Books" class="category-link">Books</a>
                    <a href="/?category=Sports" class="category-link">Sports</a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>
